<p id="notice"><%= notice %></p>

<h1>Listing Burgers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Vegetarian</th>
      <th>Spicy</th>
      <th>Price single</th>
      <th>Price double</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @burgers.each do |burger| %>
      <tr>
        <td><%= burger.name %></td>
        <td><%= burger.description %></td>
        <td><%= burger.vegetarian %></td>
        <td><%= burger.spicy %></td>
        <td><%= burger.price_single %></td>
        <td><%= burger.price_double %></td>
        <td><%= link_to 'Show', burger %></td>
        <td><%= link_to 'Edit', edit_burger_path(burger) %></td>
        <td><%= link_to 'Destroy', burger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

